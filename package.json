{
  "name": "gold-stage",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "postinstall": "node hotfix && node config.generate && npm run build:ssr",
    "ng": "ng",
    "build": "ng build --prod",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server.js",
    "build:client-and-server-bundles": "ng build --prod && ng build --prod --app server --output-hashing=false",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:client:bundle:dev": "ng build --aot",
    "build:server:bundle:dev": "ng build --app server --output-hashing=false --aot",
    "build:server:dev": "webpack --config webpack.server.config.js --progress --colors",
    "watch:client:bundle": "npm run build:client:bundle:dev -- -w",
    "watch:server:bundle": "npm run build:server:bundle:dev -- -w",
    "watch:server": "npm run build:server:dev -- --watch",
    "watch": "concurrently \"npm run watch:client:bundle\" \"npm run watch:server:bundle\" \"npm run watch:server\"",
    "serve": "nodemon --inspect dist/server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/platform-server": "^5.2.9",
    "@angular/router": "^5.2.0",
    "@ngrx/effects": "^5.2.0",
    "@ngrx/store": "^5.2.0",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0",
    "core-js": "^2.4.1",
    "ngx-cookie": "^3.0.1",
    "rxjs": "^5.5.6",
    "ts-loader": "^3.5.0",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.17.3",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "typescript": "~2.5.3"
  }
}
